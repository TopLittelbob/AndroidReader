<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_theme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <LinearLayout
        android:id="@+id/title_theme"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/holo_blue_dark"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/back_btn_theme"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:background="@drawable/button_back" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/action_bar_divider"
            android:focusable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/title_theme"
            android:textColor="@android:color/white"
            android:textSize="9pt" />
    </LinearLayout>

    <View
        android:id="@+id/divider_theme"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_below="@id/title_theme"
        android:background="@drawable/category_dividing_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_theme"
        android:layout_margin="5dp"
        android:background="@drawable/bg_rounded_rect"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/black_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/theme_black" />

        <Button
            android:id="@+id/white_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/theme_blue" />
    </LinearLayout>

</RelativeLayout>